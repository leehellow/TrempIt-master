<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/passengerRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text = "(name) wants to join your ride from (location) to (event)"/>

    <Button
        android:id="@+id/approveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passengerRequest"
        android:layout_alignParentRight="true"
        android:text="approve"
        android:onClick="approverPassenger" />

    <Button
        android:id="@+id/declineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passengerRequest"
        android:layout_toLeftOf="@id/approveButton"
        android:text="decline"
        android:onClick="declinePassenger" />

</RelativeLayout>