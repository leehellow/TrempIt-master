<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/signupButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign up as driver"
        android:onClick="driverSignupOnClick"
        />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupButton"
        android:onClick="startMap"
        android:text="Show map"/>

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="refreshActivity"
        android:text="Refresh"
        android:layout_below="@+id/signupButton"
        android:layout_toRightOf="@+id/mapButton"
        android:layout_toEndOf="@+id/mapButton"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <ListView
        android:id="@+id/driverlistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/refreshButton" />

</RelativeLayout>