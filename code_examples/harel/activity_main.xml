<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/loginUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@id/loginUsernameTextfield"
        android:text="Username "/>

    <EditText
        android:id="@+id/loginUsernameTextfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/loginUsername"
        android:hint="@string/insert_username"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginUsernameTextfield"
        android:layout_centerHorizontal="true"
        android:onClick="login"
        android:text="@string/login_to_trempit"/>

    <TextView
        android:id="@+id/loginError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:textColor="#FF0000"
        android:text=""/>

    <TextView
        android:id="@+id/signupUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/loginError"
        android:layout_alignBaseline="@id/signupUsernameTextfield"
        android:text="Username "/>

    <EditText
        android:id="@+id/signupUsernameTextfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginError"
        android:layout_toRightOf="@id/signupUsername"
        android:hint="@string/insert_username"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/signupUsernameTextfield"
        android:layout_alignBaseline="@id/countryTextfield"
        android:text="Country      "/>

    <EditText
        android:id="@+id/countryTextfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupUsernameTextfield"
        android:layout_toRightOf="@id/country"
        android:hint="@string/insert_country"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/countryTextfield"
        android:layout_alignBaseline="@id/cityTextfield"
        android:text="City             "/>

    <EditText
        android:id="@+id/cityTextfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countryTextfield"
        android:layout_toRightOf="@id/city"
        android:hint="@string/insert_city"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/cityTextfield"
        android:layout_alignBaseline="@id/streetTextfield"
        android:text="Street         "/>

    <EditText
        android:id="@+id/streetTextfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityTextfield"
        android:layout_toRightOf="@id/street"
        android:hint="@string/insert_street"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/streetTextfield"
        android:layout_alignBaseline="@id/numberTextfield"
        android:text="Number     "/>

    <EditText
        android:id="@+id/numberTextfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/streetTextfield"
        android:layout_toRightOf="@id/number"
        android:hint="@string/insert_house_number" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberTextfield"
        android:layout_centerHorizontal="true"
        android:onClick="signup"
        android:text="@string/signup_to_trempit" />

    <TextView
        android:id="@+id/signupError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupButton"
        android:textColor="#FF0000"
        android:text=""/>

</RelativeLayout>
